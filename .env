# --------------------------------------------------
# Application Settings
# --------------------------------------------------
APP_NAME=Physician Notetaker
FLASK_ENV=development
FLASK_DEBUG=True
HOST=127.0.0.1
PORT=5000

# --------------------------------------------------
# Paths
# --------------------------------------------------
DATA_DIR=data
LOG_LEVEL=INFO

# --------------------------------------------------
# NLP Configuration
# --------------------------------------------------
SPACY_MODEL=en_core_web_sm
MAX_KEYWORDS=10

# --------------------------------------------------
# Model Placeholders (Future Use)
# --------------------------------------------------
NER_MODEL_PATH=models/ner/medical_ner_model
SENTIMENT_MODEL_PATH=models/sentiment/bert_sentiment_model.pt
SUMMARIZATION_MODEL_PATH=models/summarization/medical_summarizer

# --------------------------------------------------
# Privacy & Security (Healthcare)
# --------------------------------------------------
MASK_PATIENT_NAMES=True
SAVE_CONVERSATIONS=True

# --------------------------------------------------
# Future Extensions
# --------------------------------------------------
ENABLE_SPEECH_TO_TEXT=False
WHISPER_MODEL=base

ENABLE_LLM=False
LLM_PROVIDER=openai
LLM_MODEL=gpt-4